<!DOCTYPE html>
<html lang="en">

	{% include "components/head.njk" %}

	<body class="container">
		<header>
			<h1 class="site_title">
				<a class="h-card" rel="me" href="/">{{ site.title }}</a>
			</h1>

			{% include "components/nav.njk" %}

		</header>

		<main class="word-wrap-break-word">
			{{ content | safe }}
		</main>

		{% include "components/footer.njk" %}
