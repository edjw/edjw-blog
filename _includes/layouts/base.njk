		{% include "../../node_modules/alpinejs/dist/alpine.js" %}
		{% endset%}

		{% set js %}
		{% include "../../assets/js/main.js" %}
		{% endset %}

		<script>
			{{ alpine | jsmin | safe}}
			{{ js | jsmin | safe }}
		</script>
	</body>

</html>