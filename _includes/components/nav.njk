{% if navigation.items %}

  <nav>

    <ul class="nav_list">
      {% for nav in navigation.items %}
        <li class="nav_item {% if section == nav.section %} currentPage
           {% endif %}">
          <a href="{{ nav.url | url }}" {% if section == nav.section %} aria-current="page"{% endif %}>
            {{ nav.text }}
          </a>
        </li>
      {% endfor %}

    </ul>
  </nav>

  {% endif%}