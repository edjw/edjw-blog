<div class="row mt-2 mb-4">
  <div class="col-10 offset-1 px-0">
    <nav>
      <ul class="nav justify-content-center justify-content-sm-start justify-content-md-center">

        {% for nav in collections.nav | sort(attribute="navorder") %}
        <li class="nav-item">
          <a href="{{ nav.url | url }}"
            class="nav-link {% if nav.url == page.url %}active{% endif %}">{{ nav.data.navtitle or nav.data.title }}</a>
        </li>
        {% endfor %}

      </ul>
    </nav>

  </div>
</div>