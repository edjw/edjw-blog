{% if navigation.items %}

  <nav aria-label="primary" x-data="{ open: false }">
    <button id="nav_toggler" type="button" aria-expanded="false" aria-label="open navigation"  @click="open = true">Menu</button>

    <ul class="nav_list" x-show="open" @click.away="open = false">
      {% for nav in navigation.items %}
        <li class="nav_item">
          <a href="{{ nav.url | url }}">
            {{ nav.text }}
          </a>
        </li>
      {% endfor %}

    </ul>
  </nav>

  {% endif%}