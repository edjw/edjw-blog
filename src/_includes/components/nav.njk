{% if navigation.items %}

  <nav class="text-base">

    <ul class="grid grid-cols-3 gap-4 my-8 list-none sm:w-2/4">
      {% for nav in navigation.items %}
        <li class="{% if section == nav.section %} currentPage
           {% endif %}">
          <a href="{{ nav.url | url }}" {% if section == nav.section %} aria-current="page"{% endif %}>
            {{ nav.text }}
          </a>
        </li>
      {% endfor %}

    </ul>
  </nav>

  {% endif%}